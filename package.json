{
    "name": "typescript-starter-app",
    "version": "0.1.0",
    "description": "",
    "private": true,
    "license": "MIT",
    "scripts": {
        "prepare": "husky install",
        "clean": "rimraf build",
        "compile": "tsc",
        "compile:watch": "tsc --watch",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "pretest": "npm run lint",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:watch": "jest --watchAll --notify",
        "dev": "concurrently -k \"npm run compile:watch\" \"npm run test:watch\"",
        "dev:notify": "concurrently -k \"npm run compile:watch\" \"npm run test:watch --notify\""
    },
    "files": [
        "build/src/"
    ],
    "devDependencies": {
        "@jest/globals": "^29.6.2",
        "@types/node": "^20.4.5",
        "@typescript-eslint/eslint-plugin": "^6.2.1",
        "concurrently": "^8.2.0",
        "eslint": "^8.46.0",
        "eslint-config-prettier": "^8.9.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^5.0.0",
        "husky": "^8.0.3",
        "jest": "^29.6.2",
        "lint-staged": "^13.2.3",
        "node-notifier": "^10.0.1",
        "nodemon": "^3.0.1",
        "prettier": "3.0.0",
        "rimraf": "^5.0.1",
        "ts-jest": "^29.1.1",
        "typescript": "~5.1.6"
    },
    "lint-staged": {
        "*": "prettier --write",
        "*.{ts,tsx}": "eslint --fix"
    }
}
