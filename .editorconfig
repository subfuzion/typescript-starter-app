root = true

# Formatting behaviors shared with Prettier.
# See: https://prettier.io/docs/en/configuration.html#editorconfig

[*]
# Non-configurable Prettier behaviors
charset = utf-8
insert_final_newline = true

# Configurable Prettier behaviors
end_of_line = lf
max_line_length = 80
indent_style = space
indent_size = 4

[*.{js,jsx,ts,tsx}]
indent_size = 4

[*.json]
indent_size = 4

[*.yaml]
indent_size = 4

[*.md]
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 8

[*.{c,cpp,cxx,h,go}]
indent_style = tab
indent_size = 8
