root = true

# Shared with prettier for formatting
# See: https://prettier.io/docs/en/configuration.html#editorconfig
[*]
charset = utf-8
insert_final_newline = true
end_of_line = lf
max_line_length = 80
indent_style = space
indent_size = 4

# Anything else just for the editor

[json]
indent_style = space
indent_size = 2
